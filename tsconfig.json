{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./app",
    "rootDirs": [
      "./app"
    ],
    "jsx": "react",
    "alwaysStrict": true,
    "allowJs": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es7",
      "es5",
      "es2015.promise",
      "es2015.generator",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
